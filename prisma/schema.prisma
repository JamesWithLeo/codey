generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}
model users {
  id        Int      @id @unique()@default(autoincrement())
  firstname String
  lastname  String
  createdAt DateTime @default(now())
}

model product {
  id          Int     @id @unique()@default(autoincrement())
  name        String  
  category    String
  price       Int
  description String
  imageUrl    String
  stock       Int
  brand       String
  isFeatured  Boolean
}
